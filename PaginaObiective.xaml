<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  xmlns:local="clr-namespace:Apartamente"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Apartamente.PaginaObiective"
             Title="PaginaObiective">
    <StackLayout Margin="20">
        <Editor Placeholder="Descrie obiectivele tale" Text="{Binding Description}" HeightRequest="50" >
            <Editor.Behaviors>
                <local:Validare />
            </Editor.Behaviors>
        </Editor>
        <Picker x:Name="AlegeApartament" Title="Introdu numele apartamentului"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Text="Salveaza" Clicked="OnSaveButtonClicked" />
            <Button Grid.Column="1" Text="Sterge" Clicked="OnDeleteButtonClicked"/>
        </Grid>
        <ListView x:Name="VizualizareaObiective" Margin="20">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Detail="{Binding Description}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Alege ceea ce ai de reparat/cumparat" MaximumWidthRequest="300" 
                Clicked="OnChooseButtonClicked"/>
    </StackLayout>
</ContentPage>